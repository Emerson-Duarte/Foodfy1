{% extends "layout.njk" %}

{% block head %}    
<title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}

    <section class="foods_recipe">
        <div id={{item.id}} class="food_recipe">
            <img src={{item.image}} alt=Imagem de {{item.name}}>
            <h2 id= "title_recipe">{{item.title}}</h2>
            <p id="author_recipe">{{item.cooker}}</p>

            <h3>Ingredientes</h3>
            {% for ingredient in item.ingredients %}
                    <ul>
                    <li>{{[ingredient]}}</li>
                    </ul>
            {% endfor %}
                    <h3>Modo de preparo</h3>
            {% for preparation in item.preparation %}
                    <ol><li>{{[preparation]}}</li></ol>
            {% endfor %}
            <h3>Informações adicionais</h3>
            <ol><li>{{item.information}}</li></ol>
        </div>
    </section>
{% endblock content %}